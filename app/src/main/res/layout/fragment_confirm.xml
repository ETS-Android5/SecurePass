<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340sp"
    android:layout_height="140sp"
    android:layout_gravity="center"
    android:background="@xml/background"
    android:minWidth="340sp"
    android:minHeight="140sp"
    android:visibility="visible">

    <com.merive.securepass.elements.TypingTextView
        android:id="@+id/confirm_title"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:width="0sp"
        android:fontFamily="@font/share_tech_mono"
        android:padding="6sp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_bar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:id="@+id/confirm_bar_background"
        android:layout_width="0sp"
        android:layout_height="58sp"
        android:layout_marginStart="42sp"
        android:layout_marginEnd="42sp"
        android:background="@xml/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/confirm_cancel_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_bar_background"
        app:layout_constraintEnd_toEndOf="@+id/confirm_bar_background"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/confirm_bar_background"
        app:layout_constraintTop_toTopOf="@+id/confirm_bar_background"
        app:srcCompat="@drawable/cancel"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/confirm_okay_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_bar_background"
        app:layout_constraintEnd_toEndOf="@+id/confirm_bar_background"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@+id/confirm_bar_background"
        app:layout_constraintTop_toTopOf="@+id/confirm_bar_background"
        app:srcCompat="@drawable/confirm"
        app:tint="@color/green" />

</androidx.constraintlayout.widget.ConstraintLayout>