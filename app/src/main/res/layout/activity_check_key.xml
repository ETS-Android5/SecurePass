<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".CheckKeyActivity">

    <com.merive.securepass.elements.TypingTextView
        android:id="@+id/check_key_title"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:fontFamily="@font/share_tech_mono"
        android:padding="6sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <com.merive.securepass.elements.TypingTextView
        android:id="@+id/check_key_hint"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:fontFamily="@font/share_tech_mono"
        android:padding="6sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <EditText
        android:id="@+id/key_edit"
        android:layout_width="235sp"
        android:layout_height="50sp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:background="@xml/background_light"
        android:ems="10"
        android:fontFamily="@font/share_tech_mono"
        android:gravity="center"
        android:hint="@string/enter_the_key"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="10"
        android:paddingLeft="16sp"
        android:paddingTop="12sp"
        android:paddingRight="16sp"
        android:paddingBottom="12sp"
        android:singleLine="true"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="LabelFor" />

    <View
        android:id="@+id/check_key_background"
        android:layout_width="116sp"
        android:layout_height="58sp"
        android:background="@xml/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/check_key_button"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:onClick="clickCheckKey"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_key_background"
        app:layout_constraintEnd_toEndOf="@+id/check_key_background"
        app:layout_constraintStart_toStartOf="@+id/check_key_background"
        app:layout_constraintTop_toTopOf="@+id/check_key_background"
        app:srcCompat="@drawable/confirm"
        app:tint="@color/green" />

</androidx.constraintlayout.widget.ConstraintLayout>