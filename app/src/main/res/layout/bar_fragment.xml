<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76sp">

    <View
        android:id="@+id/bar"
        android:layout_width="0sp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@xml/bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_button"
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:layout_marginBottom="20dp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:onClick="clickAdd"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:layout_marginBottom="20dp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:onClick="clickLock"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lock"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="56sp"
        android:layout_height="56sp"
        android:layout_marginBottom="20dp"
        android:background="@xml/background_light"
        android:contentDescription="@string/todo"
        android:onClick="clickSettings"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings"
        app:tint="@color/green" />

</androidx.constraintlayout.widget.ConstraintLayout>